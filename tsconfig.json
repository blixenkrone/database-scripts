{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "es2017.object"],
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}